// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Use DATABASE_PROVIDER env var to switch between sqlite (dev) and postgresql (prod)
datasource db {
  provider  = env("DATABASE_PROVIDER")
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  dreams        Dream[]
  settings      UserSettings?
  accounts      Account[]
  sessions      Session[]
}

model Dream {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  content         String
  dreamDate       DateTime  @default(now())
  emotions        String    @default("[]")
  symbols         String    @default("[]")
  lucidity        Int       @default(0) // 0-5 scale
  interpretation  String?
  interpretedAt   DateTime?
  tags            String    @default("[]")
  isRecurring     Boolean   @default(false)
  recurringId     String?
  mood            String?
  sleepQuality    Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
  @@index([dreamDate])
}

model UserSettings {
  id                    String  @id @default(cuid())
  userId                String  @unique
  user                  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  interpretationStyle   String  @default("balanced") // "spiritual", "psychological", "balanced"
  language              String  @default("fr")
  notificationsEnabled  Boolean @default(true)
  reminderTime          String?
  theme                 String  @default("dark")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
